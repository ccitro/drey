{
  "name": "drey",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development nodemon",
    "build": "next build && node esbuild.mjs",
    "start": "prisma migrate deploy && NODE_ENV=production node dist/drey.js",
    "lint": "prettier --write \"**/*.ts\" \"**/*.tsx\" && next lint --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --silent=false",
    "generate-schema": "npx typescript-json-schema --required src/types/drey.d.ts DreyConfig --out res/DreyConfig.schema.json",
    "postinstall": "prisma generate"
  },
  "nodemonConfig": {
    "exec": "node esbuild.mjs && node --enable-source-maps dist/drey.js",
    "ext": "ts"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "parser": "typescript",
    "tabWidth": 4
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/server": "^11.10.0",
    "@iconify-icon/react": "^1.0.0-beta.2",
    "@iconify-icons/mdi": "^1.2.27",
    "@mantine/core": "^5.1.0",
    "@mantine/dates": "^5.1.0",
    "@mantine/form": "^5.1.0",
    "@mantine/hooks": "^5.1.0",
    "@mantine/next": "^5.1.0",
    "@mantine/notifications": "^5.1.0",
    "@prisma/client": "^4.1.1",
    "@reduxjs/toolkit": "^1.8.3",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/node": "18.6.5",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@types/ws": "^8.5.3",
    "ajv": "^8.11.0",
    "better-ajv-errors": "^1.2.0",
    "dayjs": "^1.11.4",
    "deep-object-diff": "^1.1.7",
    "esbuild": "^0.14.54",
    "express": "^4.18.1",
    "fast-deep-equal": "^3.1.3",
    "lodash.memoize": "^4.1.2",
    "next": "12.2.4",
    "next-redux-wrapper": "8.0.0-rc.1",
    "prisma": "^4.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^8.0.2",
    "typescript": "4.7.4",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@jest/globals": "^28.1.3",
    "@types/lodash.memoize": "^4.1.7",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "8.21.0",
    "eslint-config-next": "12.2.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.7"
  },
  "packageManager": "yarn@3.2.2"
}
