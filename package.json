{
  "name": "drey",
  "version": "0.9.11",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development nodemon",
    "build": "next build && node esbuild.mjs",
    "start": "prisma migrate deploy && NODE_ENV=production node dist/drey.js",
    "lint": "prettier --write \"**/*.ts\" \"**/*.tsx\" && next lint --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --silent=false",
    "generate-schema": "npx typescript-json-schema --required src/types/drey.d.ts DreyConfig --out res/DreyConfig.schema.json",
    "postinstall": "prisma generate"
  },
  "nodemonConfig": {
    "exec": "node esbuild.mjs && node --enable-source-maps dist/drey.js",
    "ext": "ts"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "parser": "typescript",
    "tabWidth": 4
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "@headlessui/react": "^1.7.7",
    "@iconify-icon/react": "^1.0.2",
    "@iconify-icons/mdi": "^1.2.39",
    "@prisma/client": "^4.9.0",
    "@reduxjs/toolkit": "^1.9.1",
    "ajv": "^8.12.0",
    "better-ajv-errors": "^1.2.0",
    "dayjs": "^1.11.7",
    "deep-object-diff": "^1.1.9",
    "express": "^4.18.2",
    "fast-deep-equal": "^3.1.3",
    "next": "13.1.4",
    "next-redux-wrapper": "8.1.0",
    "prisma": "^4.9.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^8.0.5",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.6",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@types/ws": "^8.5.4",
    "@babel/core": "^7.20.12",
    "@jest/globals": "^29.3.1",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "autoprefixer": "^10.4.13",
    "eslint": "8.32.0",
    "eslint-config-next": "13.1.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "tailwindcss": "^3.2.4",
    "typescript": "4.9.4",
    "esbuild": "^0.17.4",
    "ts-jest": "^29.0.5"
  },
  "packageManager": "yarn@3.2.2"
}
